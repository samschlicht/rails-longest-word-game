<h1>New game</h1>

<ul style="padding-left: 0; display: inline">
  <% @letters.each do |letter| %>
    <div class="letters"><li><%= letter %></li></div>
  <% end %>
</ul>

<form action="score" method="POST" data-turbo="false" class="mt-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join() %>
  <label for="letters">What's the longest word you can find?</label>
  <div class="input-group mb-1">
    <input type="text" class="form-control" placeholder="Type here..." name="word">
    <div class="input-group-append">
      <button class="btn btn-outline-primary">That's the best I got!</button>
    </div>
  </div>
</form>